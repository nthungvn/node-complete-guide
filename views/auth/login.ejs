<%- include('../includes/head') %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/auth.css">
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <form class="login-form" action="/login" method="POST">
        <% if (errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %> </div>
        <% } %>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            class="form-control <%= validationErrors.find((item) => item.param === 'email') ? 'invalid' : '' %>"
            id="email"
            name="email"
            type="text"
            value="<%= oldInput.email %>"
          >
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            class="form-control <%= validationErrors.find((item) => item.param === 'password' ) ? 'invalid' : '' %>"
            id="password"
            name="password"
            type="password"
            value="<%= oldInput.password %>"
          >
        </div>
        <div class="form-group row">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <input class="button button--primary" type="submit" value="Login">
        </div>
      </form>
      <div class="centered">
        <a href="/reset">Reset Password</a>
      </div>
    </main>
  </body>
<%- include('../includes/end') %>
