<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <form
        action="/admin/<%= editing ? 'edit-product' : 'add-product' %>"
        method="POST"
        class="product-form"
        enctype="multipart/form-data"
      >
        <% if (errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %> </div>
        <% } %>
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control <%= validationErrors.find((item) => item.param === 'title') ? 'invalid' : '' %>"
            value="<%= editing || hasError ? product.title : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="image">Image</label>
          <input
            class="form-control"
            type="file"
            name="image"
            id="image"
            accept="image/png, image/jpg, image/jpeg"
          >
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            class="form-control <%= validationErrors.find((item) => item.param === 'price') ? 'invalid' : '' %>"
            step="0.01"
            value="<%= editing || hasError ? product.price : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            id="description"
            name="description"
            class="form-control <%= validationErrors.find((item) => item.param === 'description') ? 'invalid' : '' %>"
            rows="5"
          ><%= editing || hasError ? product.description : '' %></textarea>
        </div>
        <% if (editing) { %>
        <input type="hidden" name="productId" value="<%= product._id %>">
        <% } %>
        <div class="form-group row">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="button button--primary"><%= !editing ? 'Add' : 'Update' %></button>
        </div>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
