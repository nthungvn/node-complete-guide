<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <form action="/admin/<%= editing ? 'edit-product' : 'add-product' %>" method="POST" class="product-form">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            value="<%= editing ? product.title : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="imageUrl">Image Url</label>
          <input
            type="text"
            id="imageUrl"
            name="imageUrl"
            class="form-control"
            value="<%= editing ? product.imageUrl : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="price">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            class="form-control"
            step="0.01"
            value="<%= editing ? product.price : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            id="description"
            name="description"
            class="form-control"
            rows="5"
          ><%= editing ? product.description : '' %></textarea>
        </div>
        <% if (editing) { %>
        <input type="hidden" name="id" id="id" value="<%= product.id %>">
        <% } %>
        <div class="form-group row">
          <button type="submit" class="button button--primary"><%= !editing ? 'Add' : 'Update' %></button>
        </div>
      </form>
    </main>
<%- include('../includes/end.ejs') %>
