extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/form.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  form(action="/admin/add-product", method="post").product-form
    div.form-group
      label(for="product-name") Product Name
      input#product-name(type="text", name="productName").form-control
    div.form-group.row
      button(type="submit").button.button--primary Submit
