  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <h1>Your products</h1>
      <ul>
        <% cartProductData.forEach((cartProduct) => { %>
        <li><%= cartProduct.productData.title %> (<%= cartProduct.quantity %>)</li>
        <form action="/delete-cart-item" method="POST">
          <button type="submit" class="btn">Delete</button>
          <input type="hidden" name="productId" value="<%= cartProduct.productData.id %>">
        </form>
        <% }); %>
      </ul>
    </main>
<%- include('../includes/end.ejs') %>
