<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <% if (cartProductsData.length > 0) { %>
        <ul>
          <% cartProductsData.forEach((cartProduct) => { %>
            <li>
              <p><%= cartProduct.title %> (<%= cartProduct.cartItem.quantity %>)</p>
              <form action="/delete-cart-item" method="POST">
                <button type="submit" class="btn">Delete</button>
                <input type="hidden" name="productId" value="<%= cartProduct.id %>">
              </form>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <h1>There is no products</h1>
      <% } %>
    </main>
<%- include('../includes/end.ejs') %>
