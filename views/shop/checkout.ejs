<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/cart.css">
  </head>
  <body>
    <%- include('../includes/nav.ejs') %>
    <main>
      <% if (products.length > 0) { %>
        <ul class="cart__item-list">
          <% products.forEach((product) => { %>
            <li class="cart__item">
              <h1><%= product.productId.title %></h1>
              <h2>Quantity: <%= product.quantity %></h2>
            </li>
          <% }) %>
        </ul>
        <div class="centered">
          <h2>Total: $<%= totalPrice %></h2>
        </div>
        <hr>
        <div class="centered">
          <button class="btn" id="order-now">Order Now!</button>
          <script src="https://js.stripe.com/v3/"></script>
          <script>
            const stripe = Stripe('pk_test_51IKYvvBc1grCTA1nytotq9PdrDl5BzJROtITyF1ZwKTDpLPIw7hmrAda6ucubwZP2yIkBLSfJR3VEHHdA30cmTHK00VAMpJV4y');
            const orderBtn = document.getElementById('order-now');
            orderBtn.addEventListener('click', () => {
              stripe.redirectToCheckout({
                sessionId: ''
              });
            });
          </script>
        </div>
      <% } else { %>
        <div class="centered">
          <h1>There is no products</h1>
        </div>
      <% } %>
    </main>
<%- include('../includes/end.ejs') %>
